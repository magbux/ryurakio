local function safeNotify(title, content, dur)
    Fluent:Notify({ Title = title, Content = content or "", Duration = dur or 4 })
end

local function safeRunAsync(fn)
    spawn(function()
        pcall(fn)
    end)
end

local MainSection = Tabs.Main:AddSection("Core Features")

