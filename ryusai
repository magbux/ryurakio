    Default = false,
    Callback = function(state)
        safeNotify("Aimbot", "Aimbot " .. (state and "on" or "off") .. " - implement logic", 4)
    end
})

ExtrasSection:AddToggle("TriggerBot", {
    Title = "Trigger Bot",
    Description = "Toggle trigger",
    Default = false,
    Callback = function(state)
        safeNotify("Trigger Bot", "Trigger bot " .. (state and "on" or "off"), 4)
    end
})

ExtrasSection:AddButton({
    Title = "Wallhack",
    Description = "See through walls",
    Callback = function()
        for _, part in pairs(workspace:GetDescendants()) do
            if part:IsA("BasePart") and part.Transparency < 0.5 then
                part.Transparency = 0.5
            end
        end
    end
})

ExtrasSection:AddButton({
    Title = "Remove Wallhack",
    Description = "Reset transparency",
    Callback = function()
        for _, part in pairs(workspace:GetDescendants()) do
            if part:IsA("BasePart") then
                part.Transparency = 0
            end
        end
    end
})

ExtrasSection:AddButton({
    Title = "Btools",
    Description = "Give building tools",
    Callback = function()
        local backpack = LocalPlayer:FindFirstChild("Backpack")
        if backpack then
            local hb1 = Instance.new("HopperBin")
            hb1.Parent = backpack
            hb1.BinType = Enum.BinType.Hammer
            local hb2 = Instance.new("HopperBin")
            hb2.Parent = backpack
            hb2.BinType = Enum.BinType.Clone
            local hb3 = Instance.new("HopperBin")
            hb3.Parent = backpack
            hb3.BinType = Enum.BinType.Grab
        end
    end
})

